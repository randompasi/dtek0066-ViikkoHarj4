A) FORALL(Sign A , Sign B ; A != null && B != null && (A.filling.getFilling.equals("*") || A.filling.getFilling.equals("-") || A.filling.getFilling.equals(".")) && (B.filling.getFilling.equals("*") || B.filling.getFilling.equals("-") || B.filling.getFilling.equals(".") ); A == B <==> A.text.equals(B.text))
B) FORALL(Sign A , Sign B ; A != null && B != null&& (A.filling.getFilling.equals("*") || A.filling.getFilling.equals("-") || A.filling.getFilling.equals(".")) && (B.filling.getFilling.equals("*") || B.filling.getFilling.equals("-") || B.filling.getFilling.equals(".") ) ; A.dimension.getLength() == B.dimension.getLength() && A.dimension.getHeight() == B.dimension.getHeight() && A.filling.getFilling.equals(B.filling.getFilling) && A.getText().equals(B.getText()))
C) FORALL (i, j ; 0 <= i < signList.Length && i+1 <= j < signList.Length ; signList[i].length.getDimension().getLength() < signList[j].length.getDimension().getLength())
D) FORALL (i, j ; 0 <= i < signList.Length && i+1 <= j < signList.Length ;  signList[i].length.getDimension().getLength() < signList[j].length.getDimension().getLength() || (signList[i].length.getDimension().getLength() == signList[j].length.getDimension().getLength() && signList[i].length.getDimension().getHeight() < signList[j].length.getDimension().getHeight()))